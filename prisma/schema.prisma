datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      UserRole
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Donor Donor[] @relation("UserDonors")
  //  reports  Report[] @relation("UserReports")
}

// Enum Definitions
enum UserRole {
  SYSTEM_ADMIN
  DONOR
  COLLECTOR
  MANAGER
  STORE_MANAGER
  LABORATORY
  HOSPITAL
}
